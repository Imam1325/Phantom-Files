client
dev tun
proto udp

# Генерируем адрес VPN-шлюза на основе имени компании
remote vpn.{{ company | lower | replace(" ", "") | replace(",", "") }}.internal 1194

resolv-retry infinite
nobind
persist-key
persist-tun

auth SHA256
cipher AES-256-CBC
remote-cert-tls server

# Метаданные для реалистичности
# User: {{ admin_name }} <{{ admin_email }}>
# Device ID: {{ aws_key }}

<ca>
-----BEGIN CERTIFICATE-----
{{ ca_cert_body }}
-----END CERTIFICATE-----
</ca>

<cert>
-----BEGIN CERTIFICATE-----
{{ client_cert_body }}
-----END CERTIFICATE-----
</cert>

<key>
-----BEGIN PRIVATE KEY-----
{{ private_key_body }}
-----END PRIVATE KEY-----
</key>